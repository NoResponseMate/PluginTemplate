{
    "name": "sylius/plugin-template",
    "description": "Sylius Plugin Template",
    "license": "MIT",
    "authors": [
        {
            "name": "Jakub Tobiasz",
            "email": "jakub.tobiasz@icloud.com"
        },
        {
            "name": "Sylius project",
            "homepage": "https://sylius.com"
        },
        {
            "name": "Community contributions",
            "homepage": "https://github.com/Sylius/Sylius/contributors"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/console": "6.3.*",
        "symfony/filesystem": "6.3.*",
        "symfony/finder": "6.3.*",
        "symfony/framework-bundle": "6.3.*",
        "symfony/runtime": "6.3.*",
        "symfony/yaml": "6.3.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Sylius\\PluginTemplate\\Configurator\\": ".configurator/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sylius\\PluginTemplate\\Configurator\\Tests\\": ".configurator/tests/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "php .configurator/cli configure"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false,
            "phpstan/extension-installer": false,
            "symfony/flex": false,
            "symfony/runtime": true
        }
    }
}
